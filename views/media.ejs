    <button class="toggle-btn" id="toggleBtn">☰</button>
    <div class="main-content" id="mainContent">
        <div class="top-content">
            <span class="text" style="font-size: 16px; color: #000000; position: fixed; right: 65px;top: 20px;" onclick="showModal(event)"><i class="fa-solid fa-user-tie"></i>&emsp;Welcome <%= username %> </span>
            <form action="/logout" method="POST" style="position: fixed; right: 0px;top: 10px;"><button type="submit" style="background-color: #f4f4f4;"><i class="fa-solid fa-right-from-bracket fa-xl" style="color: #ff0000;"></i></button></form>
        </div>
        <div class="container">
            <span style="font-size: 20px;font-weight: bold;"><i class="fa-solid fa-photo-film icon"></i> Media List</span>
            <button style="margin-left: 75%;width: 130px;" onclick="openModal()">Upload</button>
            <div id="imageList"></div>

            <div id="uploadModal" class="modal">
                <div class="modal-content">
                    <span onclick="closeModal()" style="float:right; cursor:pointer;">&times;</span>
                    <input type="file" id="fileInput" accept="image/*">
                    <div id="previewContainer">
                        <img id="preview" src="#" alt="图片预览" style="display: none;">
                    </div>
                    <div id="progressContainer">
                        <!-- <div id="progressBar"></div> -->
                    </div>
                    <button style="margin-left: 40%;" onclick="uploadImage()">Upload</button>
                </div>
            </div>
        </div>       
